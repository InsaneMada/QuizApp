<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/quiz"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/quiz" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="@dimen/text_view_padding"
                android:text="@string/quiz_text"
                android:textColor="@color/text_color"
                android:textSize="@dimen/text_font_size"
                android:textStyle="italic" />

            <EditText
                android:id="@+id/user_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:hint="@string/name"
                android:inputType="textCapWords"
                android:padding="@dimen/edit_text_padding"
                android:backgroundTint="@color/edit_hint"
                android:textColor="@color/text_color"
                android:textColorHint="@color/edit_hint" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/text_view_padding"
                android:text="@string/question_1"
                android:textColor="@color/text_color"
                android:textSize="@dimen/text_font_size" />

            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/radioGroup_margin_left"
                android:layout_marginBottom="@dimen/radioGroup_margin_bottom">

                <RadioButton
                    android:id="@+id/q1_a1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:buttonTint="@color/tint_color"
                    android:text="@string/q1_a1"
                    android:textColor="@color/tint_color"
                    android:textSize="@dimen/button_font_size"
                    android:onClick="onRadioButtonClicked"/>

                <RadioButton
                    android:id="@+id/q1_a2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:buttonTint="@color/tint_color"
                    android:textColor="@color/tint_color"
                    android:text="@string/q1_a2"
                    android:textSize="@dimen/button_font_size"
                    android:onClick="onRadioButtonClicked"/>

                <RadioButton
                    android:id="@+id/q1_a3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:buttonTint="@color/tint_color"
                    android:text="@string/q1_a3"
                    android:textColor="@color/tint_color"
                    android:textSize="@dimen/button_font_size"
                    android:onClick="onRadioButtonClicked"/>
            </RadioGroup>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/text_view_padding"
                android:text="@string/question_2"
                android:textColor="@color/text_color"
                android:textSize="@dimen/text_font_size" />

            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/radioGroup_margin_left"
                android:layout_marginBottom="@dimen/radioGroup_margin_bottom">

                <RadioButton
                    android:id="@+id/q2_a1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:buttonTint="@color/tint_color"
                    android:text="@string/q2_a1"
                    android:textColor="@color/tint_color"
                    android:textSize="@dimen/button_font_size"
                    android:onClick="onRadioButtonClicked"/>

                <RadioButton
                    android:id="@+id/q2_a2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:buttonTint="@color/tint_color"
                    android:text="@string/q2_a2"
                    android:textColor="@color/tint_color"
                    android:textSize="@dimen/button_font_size"
                    android:onClick="onRadioButtonClicked"/>

                <RadioButton
                    android:id="@+id/q2_a3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:buttonTint="@color/tint_color"
                    android:text="@string/q2_a3"
                    android:textColor="@color/tint_color"
                    android:textSize="@dimen/button_font_size"
                    android:onClick="onRadioButtonClicked"/>
            </RadioGroup>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/text_view_padding"
                android:text="@string/question_3"
                android:textColor="@color/text_color"
                android:textSize="@dimen/text_font_size" />

            <CheckBox
                android:id="@+id/q3_a1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/checkbox_margin_left"
                android:buttonTint="@color/tint_color"
                android:text="@string/q3_a1"
                android:textColor="@color/tint_color"
                android:textSize="20sp" />

            <CheckBox
                android:id="@+id/q3_a2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/checkbox_margin_left"
                android:buttonTint="@color/tint_color"
                android:text="@string/q3_a2"
                android:textColor="@color/tint_color"
                android:textSize="@dimen/button_font_size" />

            <CheckBox
                android:id="@+id/q3_a3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/checkbox_margin_bottom"
                android:layout_marginLeft="@dimen/checkbox_margin_left"
                android:buttonTint="@color/tint_color"
                android:text="@string/q3_a3"
                android:textColor="@color/tint_color"
                android:textSize="@dimen/button_font_size" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/text_view_padding"
                android:text="@string/question_4"
                android:textColor="@color/text_color"
                android:textSize="@dimen/text_font_size" />

            <CheckBox
                android:id="@+id/q4_a1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/checkbox_margin_left"
                android:buttonTint="@color/tint_color"
                android:text="@string/q4_a1"
                android:textColor="@color/tint_color"
                android:textSize="@dimen/button_font_size" />

            <CheckBox
                android:id="@+id/q4_a2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/checkbox_margin_left"
                android:buttonTint="@color/tint_color"
                android:text="@string/q4_a2"
                android:textColor="@color/tint_color"
                android:textSize="@dimen/button_font_size" />

            <CheckBox
                android:id="@+id/q4_a3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/checkbox_margin_bottom"
                android:layout_marginLeft="@dimen/checkbox_margin_left"
                android:buttonTint="@color/tint_color"
                android:text="@string/q4_a3"
                android:textColor="@color/tint_color"
                android:textSize="@dimen/button_font_size" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/text_view_padding"
                android:text="@string/question_5"
                android:textColor="@color/text_color"
                android:textSize="@dimen/text_font_size" />

            <EditText
                android:id="@+id/q5_answer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:hint="@string/q5_hint"
                android:inputType="textCapWords"
                android:padding="@dimen/edit_text_padding"
                android:backgroundTint="@color/edit_hint"
                android:textColor="@color/text_color"
                android:textColorHint="@color/edit_hint" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/text_view_padding"
                android:text="@string/question_6"
                android:textColor="@color/text_color"
                android:textSize="@dimen/text_font_size" />

            <EditText
                android:id="@+id/q6_answer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:hint="@string/q6_hint"
                android:inputType="textCapWords"
                android:padding="@dimen/edit_text_padding"
                android:backgroundTint="@color/edit_hint"
                android:textColor="@color/text_color"
                android:textColorHint="@color/edit_hint" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center_horizontal"
                android:padding="@dimen/Linear_padding">

                <Button
                    android:id="@+id/submit_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/S_button"
                    android:textSize="@dimen/button_font_size"
                    android:onClick="submitScore"/>

                <Button
                    android:id="@+id/reset_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/R_button"
                    android:textSize="@dimen/button_font_size"
                    android:onClick="resetQuiz"/>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>